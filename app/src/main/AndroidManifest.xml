<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jr.poliv.temperatureconverter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Celsius_to_Fahrenheit"
            android:label="@string/title_activity_celsius_to__fahrenheit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Fahrenheit_to_Celsius"
            android:label="@string/title_activity_fahrenheit_to__celsius"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Celsius_to_Kelvin"
            android:label="@string/title_activity_celsius_to__kelvin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Kelvin_to_Celsius"
            android:label="@string/title_activity_kelvin_to__celsius"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Kelvin_to_Fahrenheit"
            android:label="@string/title_activity_kelvin_to__fahrenheit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Fahrenheit_to_Kelvin"
            android:label="@string/title_activity_fahrenheit_to__kelvin"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
