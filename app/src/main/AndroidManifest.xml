<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jr.poliv.temperatureconverteralpha">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TemperatureConverter"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivityForTemp"
            android:label="@string/title_main_activity_for_temp"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity
            android:name=".CelsiusToFahrenheit"
            android:label="@string/title_activity_celsius_to__fahrenheit"
            android:parentActivityName=".MainActivityForTemp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Fahrenheit_to_Celsius"
            android:label="@string/title_activity_fahrenheit_to__celsius"
            android:parentActivityName=".MainActivityForTemp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CelsiusToKelvin"
            android:label="@string/title_activity_celsius_to__kelvin"
            android:parentActivityName=".MainActivityForTemp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".KelvinToCelsius"
            android:label="@string/title_activity_kelvin_to__celsius"
            android:parentActivityName=".MainActivityForTemp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".KelvinToFahrenheit"
            android:label="@string/title_activity_kelvin_to__fahrenheit"
            android:parentActivityName=".MainActivityForTemp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Fahrenheit_to_Kelvin"
            android:label="@string/title_activity_fahrenheit_to__kelvin"
            android:parentActivityName=".MainActivityForTemp"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".CurrencyConverter"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
